{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/main/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/main/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/main",
  "projects": {
    "main": {
      "type": "application",
      "root": "apps/main",
      "entryFile": "main",
      "sourceRoot": "apps/main/src",
      "compilerOptions": {
        "tsConfigPath": "apps/main/tsconfig.app.json",
        "assets": [
          {
            "include": ".env",
            "watchAssets": true
          }
        ]
      }
    },
    "code-review": {
      "type": "application",
      "root": "apps/code-review",
      "entryFile": "main",
      "sourceRoot": "apps/code-review/src",
      "compilerOptions": {
        "tsConfigPath": "apps/code-review/tsconfig.app.json",
        "assets": [
          {
            "include": ".env",
            "watchAssets": true
          }
        ]
      }
    },
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    },
    "m-user": {
      "type": "application",
      "root": "apps/m-user",
      "entryFile": "main",
      "sourceRoot": "apps/m-user/src",
      "compilerOptions": {
        "tsConfigPath": "apps/m-user/tsconfig.app.json",
        "assets": [
          {
            "include": ".env",
            "watchAssets": true
          }
        ]
      }
    },
    "m-token": {
      "type": "application",
      "root": "apps/m-token",
      "entryFile": "main",
      "sourceRoot": "apps/m-token/src",
      "compilerOptions": {
        "tsConfigPath": "apps/m-token/tsconfig.app.json",
        "assets": [
          {
            "include": ".env",
            "watchAssets": true
          }
        ]
      }
    },
    "m-telegram-bot": {
      "type": "application",
      "root": "apps/m-telegram-bot",
      "entryFile": "main",
      "sourceRoot": "apps/m-telegram-bot/src",
      "compilerOptions": {
        "tsConfigPath": "apps/m-telegram-bot/tsconfig.app.json",
        "assets": [
          {
            "include": ".env",
            "watchAssets": true
          }
        ]
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}