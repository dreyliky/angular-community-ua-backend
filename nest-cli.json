{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "apps/main/src",
    "compilerOptions": {
        "deleteOutDir": true,
        "webpack": true,
        "tsConfigPath": "apps/main/tsconfig.app.json"
    },
    "monorepo": true,
    "root": "apps/main",
    "projects": {
        "main": {
            "type": "application",
            "root": "apps/main",
            "entryFile": "main",
            "sourceRoot": "apps/main/src",
            "compilerOptions": {
                "tsConfigPath": "apps/main/tsconfig.app.json",
                "assets": [
                    {
                        "include": ".env",
                        "watchAssets": true
                    }
                ]
            }
        },
        "code-review": {
            "type": "application",
            "root": "apps/code-review",
            "entryFile": "main",
            "sourceRoot": "apps/code-review/src",
            "compilerOptions": {
                "tsConfigPath": "apps/code-review/tsconfig.app.json",
                "assets": [
                    {
                        "include": ".env",
                        "watchAssets": true
                    }
                ]
            }
        },
        "telegram-bot": {
            "type": "application",
            "root": "apps/telegram-bot",
            "entryFile": "main",
            "sourceRoot": "apps/telegram-bot/src",
            "compilerOptions": {
                "tsConfigPath": "apps/telegram-bot/tsconfig.app.json",
                "assets": [
                    {
                        "include": ".env",
                        "watchAssets": true
                    }
                ]
            }
        },
        "shared": {
            "type": "library",
            "root": "libs/shared",
            "entryFile": "index",
            "sourceRoot": "libs/shared/src",
            "compilerOptions": {
                "tsConfigPath": "libs/shared/tsconfig.lib.json"
            }
        },
        "user": {
            "type": "application",
            "root": "apps/user",
            "entryFile": "main",
            "sourceRoot": "apps/user/src",
            "compilerOptions": {
                "tsConfigPath": "apps/user/tsconfig.app.json",
                "assets": [
                    {
                        "include": ".env",
                        "watchAssets": true
                    }
                ]
            }
        },
        "token": {
            "type": "application",
            "root": "apps/token",
            "entryFile": "main",
            "sourceRoot": "apps/token/src",
            "compilerOptions": {
                "tsConfigPath": "apps/token/tsconfig.app.json",
                "assets": [
                    {
                        "include": ".env",
                        "watchAssets": true
                    }
                ]
            }
        }
    }
}
